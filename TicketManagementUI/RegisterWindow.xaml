<Window x:Class="TicketManagementUI.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketManagementUI"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="390" Width="243">
    <Grid>
        <TextBox x:Name="UserName" HorizontalAlignment="Center" Margin="0,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Height="40" MaxLength="40" TextChanged="UserName_TextChanged"/>
        <PasswordBox x:Name="UserPassword" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" Width="182" Height="31" MaxLength="14" PasswordChar="*"/>
        <PasswordBox x:Name="UserPasswordConfirm" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top" Width="182" Height="31" MaxLength="14" PasswordChar="*"/>
        <Button x:Name="RegisterButton" Content="Зарегестрироваться" HorizontalAlignment="Center" Margin="0,268,0,0" VerticalAlignment="Top" Height="40" Width="119" Click="RegisterButton_Click"/>
    </Grid>
</Window>
