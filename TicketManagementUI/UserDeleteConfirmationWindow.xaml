<Window x:Class="TicketManagementUI.UserDeleteConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketManagementUI"
        mc:Ignorable="d"
        Title="UserDeleteConfirmationWindow" Height="312" Width="296">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,38,0,0" TextWrapping="Wrap" Text="Вы действительно желаете удалить выбранного пользователя?" VerticalAlignment="Top" Height="78" Width="212" FontSize="16" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,121,0,0" TextWrapping="Wrap" Text="Действие не может быть отменено. Средства за все заказы будут возвращены!" VerticalAlignment="Top" Height="52" Width="212" TextAlignment="Center"/>
        <Button Content="Да" HorizontalAlignment="Left" Margin="201,224,0,0" VerticalAlignment="Top" Width="53" Click="Button_Click_1"/>
        <Button Content="Нет" HorizontalAlignment="Left" Margin="42,224,0,0" VerticalAlignment="Top" Width="53" Click="Button_Click"/>

    </Grid>
</Window>
