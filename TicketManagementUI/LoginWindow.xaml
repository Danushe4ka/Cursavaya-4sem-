<Window x:Class="TicketManagementUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketManagementUI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="513" Width="363">
    <Grid>
        <TextBox x:Name="UserName" HorizontalAlignment="Center" Margin="0,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Height="40" MaxLength="40" TextChanged="UserName_TextChanged"/>
        <PasswordBox x:Name="UserPassword" HorizontalAlignment="Center" Margin="0,169,0,0" VerticalAlignment="Top" Width="182" Height="31" MaxLength="14" PasswordChar="*"/>
        <Button x:Name="LoginButton" Content="Войти" HorizontalAlignment="Center" Margin="0,287,0,0" VerticalAlignment="Top" Height="40" Width="119" Click="LoginButton_Click"/>
        <Button x:Name="GuestButton" Content="Гостевой вход" HorizontalAlignment="Center" Margin="0,355,0,0" VerticalAlignment="Top" Height="40" Width="119" Click="GuestButton_Click"/>
        <Button x:Name="RegisterButton" Content="Зарегистрироваться" HorizontalAlignment="Center" Margin="0,417,0,0" VerticalAlignment="Top" Height="40" Width="119" Click="RegisterButton_Click"/>
    </Grid>
</Window>
