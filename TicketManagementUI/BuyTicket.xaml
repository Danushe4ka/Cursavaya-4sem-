<Window x:Class="TicketManagementUI.BuyTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketManagementUI"
        mc:Ignorable="d"
        Title="BuyTicket" Height="295" Width="305">
    <Grid>
        <ComboBox x:Name="TypeSelectionBox" HorizontalAlignment="Center" Margin="0,91,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" SelectionChanged="TypeSelectionBox_SelectionChanged"/>
        <Label Content="Тип места" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Width="104" HorizontalContentAlignment="Center" FontSize="16"/>
        <Button x:Name="BuyButton" Content="Купить" HorizontalAlignment="Center" Margin="0,189,0,0" VerticalAlignment="Top" Height="42" Width="104" Click="Button_Click" IsEnabled="False"/>
        <ComboBox x:Name="PlaceSelectionBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="40" SelectedIndex="0" Height="33" Margin="0,140,0,0" SelectionChanged="PlaceSelectionBox_SelectionChanged" IsEnabled="False" />

    </Grid>
</Window>
